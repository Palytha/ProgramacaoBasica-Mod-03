/*Módulo 03 Exercício 38 Analisando a Idade
O usuário irá cadastrar pessoas com Nome, Idade e Sexo com esses dados o programa irá mostras as seguintes 
informações.
-homem mais jovem e sua idade
-homem mais velho e sua idade
-mulher mais jovem e sua idade
-mulher mais velha e sua idade
*/Autora Fernanda de Almeida Guerra

programa
{
	
	funcao inicio()
	{
		cadeia nome = "", hjovem = "", hvelho = "", mvelha = "", mjovem = ""
		caracter sexo 
		inteiro cont = 1, idade = 0, tothom = 0, totmul = 0
		inteiro hmaior = 0, hmenor =0, mmaior = 0, mmenor = 0
		
		enquanto (cont <= 5) {
			escreva ("===========================")
			escreva ("\n\t", cont, "ª pessoa")
			escreva ("\n===========================")
			escreva ("\nNome: ")
			leia (nome)
			escreva ("Idade: ")
			leia (idade)
			escreva ("Sexo [H/M]: ")
			leia (sexo)

			se (sexo == 'h' ou sexo == 'H') {
				tothom ++
				se (cont == 1) {
					hmaior = idade
					hvelho = nome
					hmenor = idade
					hjovem = nome
				}
					se (idade >= hmaior) {
						hmaior = idade
						hvelho = nome
						}
					se (idade < hmenor) {
						hmenor = idade
						hjovem = nome	
					}
			}senao se (sexo == 'm' ou sexo == 'M') {
				totmul ++
				se (totmul == 1) {
					mmaior = idade
					mvelha = nome
					mmenor = idade
					mjovem = nome
				}
					se (idade >= mmaior) {
						mmaior = idade
						mvelha = nome 
				    }
					se (idade < mmenor) {
						mmenor = idade
						mjovem = nome
				   }
			}
			cont ++
		}
		escreva ("\nO homem mais jovem é ", hjovem, " ele tem ", hmenor, " anos.")
		escreva ("\nO homem mais velho é ", hvelho, " ele tem ", hmaior, " anos.")
		escreva ("\nA mulher mais jovem é ", mjovem, " ela tem ", mmenor, " anos.")
		escreva ("\nA mulher mais velha é ", mvelha, " ela tem ", mmaior, " anos.\n\n")
		
	}
}